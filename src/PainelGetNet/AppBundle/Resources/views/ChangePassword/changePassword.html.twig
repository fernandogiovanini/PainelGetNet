{% extends "::layout.html.twig" %}

{% form_theme form "MopaBootstrapBundle:Form:fields.html.twig" %}
{% block content_row %}
    {% block sonata_profile_title %}
        <h2>{% trans from 'SonataUserBundle' %}sonata_change_password_title{% endtrans %}</h2>
    {% endblock %}

    <div class="row row-fluid">
        <div class="col-md-12">
            {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
        </div>
    </div>

    <div class="sonata-user-show row row-fluid">

        <div class="col-xs-12">

            {{ form_errors(form) }}

            <div class="panel panel-form">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ "sonata_change_password_title" | trans({}, 'SonataUserBundle')}}</h3>
                </div>
                <div class="panel-body">
                    {% include "SonataUserBundle:ChangePassword:changePassword_content.html.twig" %}
                </div>
            </div>
        </div>


    </div>



{% endblock content_row %}
